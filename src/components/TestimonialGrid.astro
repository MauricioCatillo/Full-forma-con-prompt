---
import { site } from "../data/site";
---

<div class="grid gap-6 md:grid-cols-3">
  {site.testimonials.map((item) => (
    <figure class="card">
      <blockquote class="text-mist">"{item.text}"</blockquote>
      <figcaption class="mt-4 text-sm text-white/80">— {item.name}</figcaption>
    </figure>
  ))}
</div>
