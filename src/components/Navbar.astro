---
import { site, navLinks } from "../data/site";
---

<header class="sticky top-0 z-50 border-b border-white/10 bg-midnight/80 backdrop-blur">
  <div class="container flex items-center justify-between py-4">
    <a href="/" class="flex items-center gap-3">
      <span class="flex h-10 w-10 items-center justify-center rounded-full bg-gold text-midnight font-heading text-xl">
        FF
      </span>
      <div class="leading-tight">
        <p class="font-heading text-lg tracking-wide">{site.name}</p>
        <p class="text-xs text-mist">{site.slogan}</p>
      </div>
    </a>

    <nav class="hidden items-center gap-6 text-sm md:flex">
      {navLinks.map((link) => (
        <a class="link-muted transition" href={link.href}>
          {link.label}
        </a>
      ))}
      <a
        class="btn btn-primary"
        href={site.whatsappLink}
        data-analytics="whatsapp"
        data-location="nav"
      >
        WhatsApp
      </a>
    </nav>

    <details class="relative md:hidden">
      <summary class="btn btn-secondary cursor-pointer">Menú</summary>
      <div class="absolute right-0 mt-3 w-56 rounded-2xl border border-white/10 bg-carbon/95 p-4 shadow-xl">
        <div class="flex flex-col gap-3 text-sm">
          {navLinks.map((link) => (
            <a class="link-muted" href={link.href}>
              {link.label}
            </a>
          ))}
          <a
            class="btn btn-primary"
            href={site.whatsappLink}
            data-analytics="whatsapp"
            data-location="nav-mobile"
          >
            WhatsApp
          </a>
        </div>
      </div>
    </details>
  </div>
</header>
