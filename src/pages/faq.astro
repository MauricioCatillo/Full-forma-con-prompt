---
import BaseLayout from "../layouts/BaseLayout.astro";
import { site } from "../data/site";

const description =
  "Preguntas frecuentes sobre planes, clases y servicios de Gimnasio Full Forma en Trujillo.";

const faqItems = [
  {
    q: "¿Qué incluye la membresía?",
    a:
      "Incluye acceso a musculación, cardio, funcional y sala grupal. Otros servicios dependen del plan. Condiciones por confirmar. Escríbenos por WhatsApp."
  },
  {
    q: "¿Cuáles son los horarios?",
    a: "Condiciones por confirmar. Escríbenos por WhatsApp."
  },
  {
    q: "¿Qué clases grupales ofrecen?",
    a:
      "Baile, aeróbicos, spinning, yoga, zumba y funcional. Condiciones por confirmar. Escríbenos por WhatsApp."
  },
  {
    q: "¿Aceptan tarjetas?",
    a: "Sí, aceptamos tarjetas de crédito y débito."
  },
  {
    q: "¿Tienen estacionamiento accesible?",
    a: "Sí, contamos con estacionamiento accesible."
  },
  {
    q: "¿Puedo agendar una visita?",
    a:
      "Sí, coordina por WhatsApp o llamada para separar tu visita. Condiciones por confirmar. Escríbenos por WhatsApp."
  }
];

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  mainEntity: faqItems.map((item) => ({
    "@type": "Question",
    name: item.q,
    acceptedAnswer: {
      "@type": "Answer",
      text: item.a
    }
  }))
};
---

<BaseLayout title="FAQ" description={description}>
  <Fragment slot="head">
    <script type="application/ld+json">{JSON.stringify(faqSchema)}</script>
  </Fragment>

  <section class="section">
    <div class="container">
      <p class="badge">FAQ</p>
      <h1 class="mt-6 font-heading text-4xl md:text-5xl">Resolvemos tus dudas</h1>
      <p class="mt-4 text-mist">
        Si necesitas más información, escríbenos por WhatsApp.
      </p>

      <div class="mt-10 grid gap-4">
        {faqItems.map((item) => (
          <details class="card">
            <summary class="flex cursor-pointer items-center justify-between text-lg font-semibold">
              {item.q}
              <span class="text-gold">+</span>
            </summary>
            <p class="mt-3 text-mist">{item.a}</p>
          </details>
        ))}
      </div>
    </div>
  </section>

  <section class="section pt-0">
    <div class="container">
      <div class="card flex flex-col gap-6 md:flex-row md:items-center md:justify-between">
        <div>
          <p class="eyebrow">Contacta ahora</p>
          <h2 class="mt-2 font-heading text-3xl">¿Tienes otra pregunta?</h2>
          <p class="mt-2 text-mist">Respondemos rápido por WhatsApp.</p>
        </div>
        <a
          class="btn btn-primary"
          href={site.whatsappLink}
          data-analytics="whatsapp"
          data-location="faq-cta"
        >
          Escribir por WhatsApp
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
